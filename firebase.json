{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "rewrites": [{
      "source": "/public/**",
      "destination": "/index.html"
    },
    {
      "source": "**",
      "destination": "/index.html"
    }],
    "target": "admin",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
